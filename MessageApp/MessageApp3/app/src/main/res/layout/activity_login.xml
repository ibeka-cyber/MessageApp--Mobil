<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icsag"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/almendra_sc"
        android:text="---------- ya da ----------"
        android:textAllCaps="false"
        android:textColor="#8C4A18"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lg_et_register"
        app:layout_constraintEnd_toEndOf="@+id/lg_et_register"
        app:layout_constraintStart_toStartOf="@+id/lg_et_register" />

    <TextView
        android:id="@+id/lg_et_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/duz"
        android:fontFamily="@font/almendra_sc"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="RegisterClick"
        android:text="Kayıt Ol"
        android:textColor="#8C4A18"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/almendra_sc"
        android:text="201813709047 - İrem Bahar KOÇ"
        android:textColor="#8C4A18"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/almendra_sc"
        android:text="Hoşgeldiniz"
        android:textColor="#8C4A18"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lg_et_email"
        app:layout_constraintStart_toStartOf="@+id/lg_et_email"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lg_et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#885B40"
        android:textColorHint="#C28964"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintWidth_percent="0.6" />

    <EditText
        android:id="@+id/lg_et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#885B40"
        android:textColorHint="#C28964"
        app:layout_constraintEnd_toEndOf="@+id/lg_et_email"
        app:layout_constraintStart_toStartOf="@+id/lg_et_email"
        app:layout_constraintTop_toBottomOf="@+id/lg_et_email"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/lg_tv_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/duz"
        android:fontFamily="@font/almendra_sc"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="signupClick"
        android:text="Giriş Yap"
        android:textColor="#8C4A18"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/lg_et_password"
        app:layout_constraintStart_toStartOf="@+id/lg_et_password"
        app:layout_constraintTop_toBottomOf="@+id/lg_et_password"
        app:layout_constraintWidth_percent="0.4" />

    <ProgressBar
        android:id="@+id/lg_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lg_tv_login"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>